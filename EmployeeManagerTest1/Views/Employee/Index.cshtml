@model IEnumerable<Employee>

@{
    ViewBag.Title = "Index";
}

<a class="btn btn-primary mt-3" asp-action="create">Create</a>
    <div class="mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Telephone</th>
                    <th>Gender</th>
                    <th>Agree</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Email</td>
                    <td>@emp.Telephone</td>
                    <td>@emp.Gender</td>
                    <td><input type="checkbox" asp-for="@emp.Agree" disabled/></td>
                    <td>@emp.Department.Name</td>
                    <td>
                        <a asp-controller="employee" asp-action="edit" asp-route-id="@emp.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="employee" onclick="return confirm('Are you sure you want to delet user' + '@emp.Email');" asp-action="delete" asp-route-id="@emp.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
