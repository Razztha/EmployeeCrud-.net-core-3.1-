@model EmployeeViewModel

@{
    ViewBag.Title = "Create";
}
<h3 class="mt-3">Create Employee</h3>
<form method="post" asp-controller="employee" asp-action="create" class="mt-3" novalidate>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" placeholder="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email" placeholder="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Telephone"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Telephone" placeholder="Name" />
            <span class="text-danger" asp-validation-for="Telephone"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="form-check-inline">
                <input class="form-check-input" value="Male" asp-for="Gender" type="radio" />Male
            </div>
            <div class="form-check-inline">
                <input class="form-check-input" value="Female" asp-for="Gender" type="radio" />Female
            </div>
            <span class="text-danger" asp-validation-for="Gender"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DepartmentId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="custom-select mr-2" asp-for="DepartmentId" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Departments">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Agree" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="form-check-inline">
                <input class="form-check-input" asp-for="Agree" type="checkbox" />
            </div>
            <span asp-validation-for="Agree" class="text-danger"></span>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Create</button>
    <button class="btn btn-primary" type="reset">Cancel</button>
</form>
